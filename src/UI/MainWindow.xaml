<controls:MetroWindow x:Class="UI.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      DataContext="{Binding Source={StaticResource Locator}, Path=MainPageViewModel}"
                      Title="Inglorious Nuget Comparer" 
                      Height="550" 
                      Width="650" 
                      Icon="/NugetCompare.UI;component/app.ico"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      WindowStartupLocation="CenterScreen">
    <Grid>
        <ContentControl Content="{Binding CurrentView}" Margin="15">
        </ContentControl>
    </Grid>
</controls:MetroWindow>
